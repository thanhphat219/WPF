<Window x:Class="B6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txbSource" 
                 VerticalAlignment="Top"
                 Text="{Binding ButtonName}"></TextBox>
        <TextBox x:Name="txbBinding"
                 VerticalAlignment="Center"
                 Text="{Binding Path=Text, ElementName=txbSource}"></TextBox>
        <Button x:Name="btnBinding" 
                VerticalAlignment="Bottom"
                Content="{Binding ButtonName}"
                Click="btnBinding_Click"></Button>
    </Grid>
</Window>
